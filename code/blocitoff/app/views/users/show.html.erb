<h1>Welcome <%=@user.email %>!</h1>
<p id="index-title">This is your SHOW page. Just wanted to make sure you land here after signing in. ;) </p>

    <div class="media">
      <br />
      <div class="media-body">
        <h2 class="media-heading"><%= @user.email %>'s checklist: </h2>
        <small>
          <div class='js-items-count'><%= pluralize(@user.items.count, 'item') %></div>
        </small>
        <div>
        <h3>Items</h3>
        <table class="table table-striped">
          <tr class="js-items">
            <th>To do</th>
            <th>Expires</th>
            <th></th>
          </tr>
          <%= render @user.items %>
        </table>
        </div>
        <% if current_user %>
        <div class='new-item'>
          <%= render 'items/form', item: Item.new, user: @user %>
        </div>
        <% end %>
      </div>
    </div>
