<h4>Add an item</h4>
<%= form_for [user, item], remote: true do |f| %>
  <div class="form-group">
    <%= f.label :title, "Enter item here:", class: 'sr-only' %>
    <%= f.text_field :title, class: 'form-control', placeholder: "Enter a new item" %>
  </div>
  <%= f.submit "Submit Item", class: 'btn btn-default pull-right' %>
<% end %>
